@{
    ViewData["Title"] = "Copa do Mundo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Copa do Mundo</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
    <style type="text/css">
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        #container {
            position: relative;
            width: 1040px;
            height: 800px;
            margin-top: 20px;
            margin-right: auto;
            margin-left: auto;
            /*border: 1px solid #000;*/
            background-color: #DEE;
        }

        header {
            position: relative;
            width: 100%;
            height: 80px;
            margin-right: auto;
            margin-left: auto;
            /*border: 1px solid #000;*/
            text-align: center;
            vertical-align: middle;
        }

        h1 {
            margin-top: 5px;
        }

        h2 {
            position: relative;
            width: 100%;            
            margin-right: auto;
            margin-left: auto;            
            text-align: center;
        }

        #painel {
            position: relative;
            width: 1000px;
            height: 550px;
            margin-top: 20px;
            margin-right: auto;
            margin-left: auto;
            /*border: 1px solid #000; 			*/
        }

        .oitavas {
            position: relative;
            float: left;
            width: 120px;
            height: 500px;
            /*border: 1px solid #000;*/
            margin-top: 20px;
            margin-left: 20px;
            text-align: center;
        }

        .quartas {
            position: relative;
            float: left;
            width: 120px;
            height: 250px;
            /*border: 1px solid #000;*/
            margin-top: 125px;
            margin-left: 20px;
            text-align: center;
        }

        .semi {
            position: relative;
            float: left;
            width: 120px;
            height: 200px;
            /*border: 1px solid #000;*/
            margin-top: 150px;
            margin-left: 20px;
            text-align: center;
        }

        #final {
